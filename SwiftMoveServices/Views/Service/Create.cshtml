@model SwiftMoveServices.Models.ServiceModel //Telling the file what model to expect

<div class="container">

    <h1 class="my-3">Create Service:</h1>
    <a asp-controller="Service" asp-action="Index" class="btn btn-primary my-3 p-2 px-2">Back</a>
    <div class="menu p-4">

        @* Only show the "Create Service" form if the user is a staff member *@
        @if (User.IsInRole("Staff"))
        {
            <!--asp-action links to the controller action Create-->
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Enter the correct details below:</h3>
                <div class="form-group my-2">
                    <label asp-for="Name">Service Name:</label>
                    <input asp-for="Name" class="form-control" type="text" />
                    <!--Display the errors message for the individual field.-->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Price">Service Price:</label>
                    <input asp-for="Price" class="form-control" type="number" step="any" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Description">Description:</label>
                    <input asp-for="Description" class="form-control" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Staff">Staff:</label>
                    <input asp-for="Staff" class="form-control" type="number" />
                    <span asp-validation-for="Staff" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success w-100 mt-3 ">Create</button>
            </form>
        }
        else
        {
            @* Optionally, show a message to customers that they cannot create services *@
            <p class="text-danger">You do not have permission to create services. Please contact staff.</p>
        }
    </div>
</div>
