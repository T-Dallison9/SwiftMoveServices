@model int
<div class="container">
    <h2>Add a review for product: @Model</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input id="Title" name="Title" class="form-control" placeholder="Review Title..." type="text" />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea id="Content" name="Content" class="form-control" placeholder="Review Content..."> </textarea>
        </div>
        <div class="form-group">
            <label for="Rating">Rating</label>
            <input id="Rating" name="Rating" class="form-control" placeholder="Review Rating (1 to 3)" type="number" min="1" max="3" />
        </div>

        <input type="hidden" name="ServiceId" value="@Model" />
        <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
</div>
