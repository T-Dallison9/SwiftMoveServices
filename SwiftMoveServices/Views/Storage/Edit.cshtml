@model SwiftMoveServices.Models.ServiceModel //Access the model.

<div class="container">


    <h1 class="my-3">Edit Service:</h1>
    <a asp-controller="Service" asp-action="Index" class="btn btn-primary my-3 p-2 px-2">Back</a>
    <div class="menu p-4">

        <!--asp-action links to the controller action Create-->
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Hidden inputs cannot be seen by the user-->
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="Name">Service Name:</label>
                <input asp-for="Name" class="form-control" type="text" />
                <!--Display the errors message for the individual field.-->
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Price">Service Price:</label>
                <input asp-for="Price" class="form-control" type="number" step="any" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Staff">Staff:</label>
                <input asp-for="Staff" class="form-control" type="number" />
                <span asp-validation-for="Staff" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Description">Description:</label>
                <input asp-for="Description" class="form-control" type="text" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100 mt-3 ">Edit</button>
        </form>
    </div>
</div>